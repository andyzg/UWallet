<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.enghack.uwallet"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/uwallet"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.NoTitleBar" >
        <activity
            android:name="com.enghack.uwallet.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <provider
                android:name=".provider.FeedProvider"
                android:authorities="com.enghack.uwallet.sync.watcardsyncadapter"
                android:exported="false" />
        
        <service
            	android:name="com.enghack.uwallet.sync.accounts.AuthenticatorService">
        	<intent-filter>
            	<action android:name="com.enghack.uwallet.watcard.AccountAuthenticator"/>
        	</intent-filter>
        	<meta-data
            	android:name="com.enghack.uwallet.watcard.AccountAuthenticator"
            	android:resource="@xml/authenticator" />
    	</service>
    </application>

</manifest>
